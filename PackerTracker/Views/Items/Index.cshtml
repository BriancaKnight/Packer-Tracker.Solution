@{
  Layout = "_Layout";
}

@using PackerTracker.Models;
@model List<PackerTracker.Models.Item>;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Item item in Model)
    {
      <li>@Html.ActionLink($"{item.Name}", "Details", new { id = item.ItemId }) | @item.Category.Title</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new item", "Create")</p>